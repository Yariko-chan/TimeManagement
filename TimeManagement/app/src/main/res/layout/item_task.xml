<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_large"
    android:padding="@dimen/margin_medium"
    style="@style/WhiteCard">

    <TextView
        android:id="@+id/header_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Primary.Large.Bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/run_time_checkbox"
        tools:text="Header"
        />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/run_time_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:button="@null"
        android:drawableEnd="@drawable/run_checkable"
        android:textAppearance="@style/TextAppearance.Primary.Large"
        app:layout_constraintBaseline_toBaselineOf="@id/header_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="00:00"
        tools:checked="true"
        />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Primary.Medium"
        app:layout_constraintTop_toBottomOf="@id/header_text_view"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="description description description description description"
        />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:textAppearance="@style/TextAppearance.Primary.Small"
        app:layout_constraintTop_toBottomOf="@id/description_text_view"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="30/12/1991 20:20"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subtasks_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date_text_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>